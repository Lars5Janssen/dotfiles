[init]
    defaultBranch = main

[alias]
    s = status -s
    st = status
    conf = config --global --edit
    ci = commit
    co = checkout
    discardUnAdded = checkout .
    unstash = stash pop
    aa = add -A
    cdf = cleand -df
    pr = pull --rebase
    br = branch
    bra = branch -a
    amend = commit -a --amend --no-edit

[core]
    pager = delta

[interactive]
    diffFilter = delta --color-only

[delta]
    navigate = true
    side-by-side = true

[merge]
    conflictstyle = diff3

[diff]
    colorMoved = default
